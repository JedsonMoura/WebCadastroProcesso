@model WebCadastroProcessos.Models.Processo

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-image: url('/path/to/your/background-image.jpg'); 
        background-size: cover;
        background-position: center;
        color: white; 
    }

    .form-container {
        background-color: rgba(0, 0, 0, 0.7); 
        padding: 20px;
        border-radius: 8px;
    }

    .btn-custom {
        margin-top: 10px;
        width: 100%;
    }

        .btn-custom:hover {
            background-color: #d9534f;
        }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="form-container">
    <h4>Processo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Npu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Npu)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataVisualizacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataVisualizacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Uf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Uf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Municipio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Municipio)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div>
            <input type="submit" value="Excluir" class="btn btn-danger btn-custom" />
            <a asp-action="Index" class="btn btn-link btn-custom">Voltar</a>
        </div>
    </form>

</div>
