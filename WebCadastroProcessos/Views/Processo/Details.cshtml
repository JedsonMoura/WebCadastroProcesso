@model WebCadastroProcessos.Models.Processo

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background-image: url('/path/to/your/background-image.jpg'); 
        background-size: cover;
        background-position: center;
        color: white; 
    }

    .details-container {
        background-color: rgba(0, 0, 0, 0.7); 
        padding: 20px;
        border-radius: 8px;
    }

    .btn-custom {
        margin-top: 10px;
        width: 100%;
    }

    .btn-custom:hover {
        background-color: #0056b3; 
    }

    .back-link {
        margin-top: 10px;
    }
</style>

<h1>Details</h1>

<div class="details-container">
    <h4>Processo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Npu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Npu)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataVisualizacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataVisualizacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Uf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Uf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Municipio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Municipio)
        </dd>
    </dl>

    <div class="back-link">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-custom">Atualizar</a>
        <a asp-action="Index" class="btn btn-link btn-custom">Voltar</a>
    </div>
</div>

